/* pages/payment/payment.wxss */
.body {
  height: 100vh;
}
.order-container {
  height: 100%;
  padding: 10px;
  background-color: rgb(236, 236, 236);
}
.order-content {
  background-color: #fff;
  border-radius: 5px;
}
.order-goods-item {
  position: relative; 
  height: 60px; 
  padding: 15px 10px; 
}
.goods-item-img {
  width: 60px;
  height: 100%;
}
.goods-item-text {
  height: 70px; 
  font-size: 15px; 
  position: absolute; 
  left: 80px; 
  top: 10px; 
  display: flex; 
  flex-direction: column; 
  justify-content: space-between;
}
.goods-item-num {
  position: absolute;
  right: 15px;
  bottom: 20px;
  font-size: 18px;
}
.order-remark {
  height: 150px;
  border-radius: 5px;
  margin-top: 10px;
  padding: 5px;
  background-color: #fff;
}
textarea {
  width: 100%;
  height: 100%;
  color: #585858;
}
.order-footer {
  position: fixed;
  display: flex;
  align-items: center;
  height: 100rpx;
  background-color: #fff;
  padding-bottom: env(safe-area-inset-bottom);
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 99;
}
.footer-left {
  width: 70%;
  height: 100rpx;
  line-height: 100rpx;
  padding-left: 20px;
  border-top: 0.2px solid #e6e6e6;
}
.footer-right {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 5px;
  margin-right: 8px;
  color: #fff;
  font-size: large;
  text-align: center;
  background-color: #ee0a24;
}