/* pages/orderDetail/orderDetail.wxss */
.container {
  height: 100vh;
  width: 100%;
}
.header {
  width: 100%;
  height: 200px;
  position: relative;
  text-align: center;
  color: #fff;
  z-index: 99;
}
.header-nav {
  position: absolute;
  top: 0;
  left: 0;
}
.header-left {
  position: absolute;
  cursor: pointer;
  left: 10px;
  bottom: 10px;
  font-size: 25px;
  font-weight: bold;
  z-index: 100;
}
.order-status {
  position: absolute;
  left: 15px;
  bottom: 80px;
  font-size: 20px;
  font-weight: 400;
}
.order-remainingTime {
  position: absolute;
  left: 15px;
  bottom: 50px;
}
.van-count-down {
  color: #fff !important;
}
.content {
  position: relative;
  border-top-right-radius: 10px;
  border-top-left-radius: 10px;
  padding: 10px 15px 0 15px;
  box-sizing: border-box;
  margin-top: -10px;
  background: linear-gradient(#fff, #f1f1f1 40%, #f1f1f1);
  z-index: 999; 
}
::-webkit-scrollbar {
  width:0;
  height:0;
  color:transparent;
}
.content-top {
  border-radius: 5px;
  padding: 10px;
  background-color: #fff;
}
.store-name {
  font-size: 15px;
}
.store-address {
  display: flex;
  justify-content: space-between;
  font-size: 13px;
  margin-top: 10px;
  color: #979797;
}
.store-address-icon {
  color: red;
}
.horizontal-line {
  width: 100%;
  height: 0.5px;
  margin: 10px 0;
  background-color: #c7c7c7;
}
.goods-item {
  position: relative;
  height: 70px;
  padding: 10px;
  font-size: 13px;
  box-sizing: border-box;
}
.goods-img {
  height: 60px; 
  width: 60px;
  border-radius: 5px;
  position: absolute;
  left: 0;
  top: 10px;
}
.goods-info {
  height: 60px;
  position: absolute;
  left: 65px;
  top: 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.goods_price {
  position: absolute;
  right: 5px;
  top: 10px;
}
.content-top-footer {
  font-size: 13px;
  color: #979797;
  text-align: right;
}
.collapse-icon {
  font-size: 13px;
  color: #979797;
  text-align: center;
}
.content-bottom {
  min-height: 80px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  border-radius: 5px;
  padding: 10px;
  margin: 10px 0;
  font-size: 13px;
  color: #000;
  background-color: #fff;
}
.content-bottom-label {
  width: 80px;
  color: #979797;
  display: inline-block;
}
.footer {
  height: 60px;
  padding: 8px 10px;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  position: fixed;
  bottom: env(safe-area-inset-bottom);
  left: 0;
  right: 0;
}
.footer-content {
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  box-sizing: border-box;
  background-color: red;
  font-size: 15px;
  color: #fff;
  border-radius: 5px;
}
.footer-left {
  width: 40%;
  height: 44px;
  line-height: 44px;
  margin-right: 10px;
  text-align: center;
  color: red;
  box-sizing: border-box;
  font-size: 15px;
  border: 1px solid red;
  border-radius: 5px;
}
.footer-right {
  width: 60%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  background-color: red;
  font-size: 15px;
  color: #fff;
  border-radius: 5px;
}
.have-footer {
  height: calc(100vh - 250px - env(safe-area-inset-bottom));
}
.no-footer {
  height: calc(100vh - 190px - env(safe-area-inset-bottom));
}