/**index.wxss**/
.body {
  height: 100vh;
}
.index-container {
  height: 100%;
}
/* 内容区：菜品页*/
.index-content {
  display: flex;
}
.index-content-left {
  background-color: #f7f8fa;
}
.index-content-side1 {
  height: 100%;
  width: 80px;
}
.index-content-right {
  width: 100%;
  margin-bottom: 200rpx;
}
.content-right-goods-list {
  position: relative;
  height: 100px;
  margin: 20px 10px;
}
.content-right-goods-name {
  position: absolute;
  top: 0;
  left: 110px;
}
.content-right-goods-img {
  height: 100px; 
  width: 100px; 
  border-radius: 5px;
}
.content-right-goods-introduction {
  position: absolute;
  width: calc(100% - 110px);
  top: 20px;
  left: 110px;
  font-size: 13px;
  color: #969799;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.content-right-goods-price {
  position: absolute;
  bottom: 0;
  left: 110px;
  color: #ee0a24;
}
.content-right-icon {
  position: absolute;
  bottom: 0;
  right: 5px;
  font-size: 18px;
}
.minus-icon {
  border: 1px solid #969799; 
  border-radius: 50%; 
  color: #969799; 
  background-color: rgba(220, 220, 220, 0.5);
}
.add-icon {
  border: 1px solid #ee0a24; 
  border-radius: 50%; 
  color: #fff; 
  background-color: #ee0a24;
}
.text-icon {
  position: relative;
  width: 50px; 
  height: 20px; 
  margin-left: -5px; 
  line-height: 20px; 
  text-align: center; 
  font-size: 14px; 
  font-weight: bold;
  border-radius: 5px; 
  background-color: #ee0a24; 
  color: #fff; 
}
.text-num {
  position: absolute;
  right: -10px;
  top: -10px;
  height: 10px;
  font-size: 12px;
  font-weight: bold;
  padding: 3px 4px;
  line-height: 10px;
  border-radius: 40%;
  background-color: #ee0a24;
  color: #fff;
  z-index: 99;
}
/* 内容区：分类页 */
.index-content-cate {
  height: 80rpx;
  line-height: 80rpx;
  margin-left: 20rpx;
}
/* 内容区：商家页 */
.index-store {
  background-color: #e3e4e6; 
  height: calc(100vh - 268px - env(safe-area-inset-bottom));
  overflow: auto;
  padding-bottom: 50px;
}
.index-store-cell {
  margin-top: 10px;
}
.index-store-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.index-store-title {
  font-size: 18px;
}
.index-store-logo {
  float: right;
  width: 140rpx;
  height: 140rpx;
  border-radius: 10rpx;
}
/* 商品页footer */
.footer {
  height: 100rpx;
  position: sticky;
  display: flex;
  align-items: center;
  background-color: #fff;
  border-top: 0.2px solid #e6e6e6;
  bottom: calc(50px + env(safe-area-inset-bottom));
  left: 0;
  right: 0;
}
.footer-left {
  width: 70%;
  display: flex;
  height: 100rpx;
}
.footer-left-cart {
  width: 80px;
  display: flex;
  justify-content: center;
  font-size: 40px;
  color: #ee0a24;
  text-align: center;
}
.footer-left-num {
  height: 10px;
  margin-top: 3px;
  margin-left: -10px;
  padding: 3px 4px;
  font-size: 12px;
  font-weight: bold;
  line-height: 10px;
  border-radius: 40%;
  background-color: #ee0a24;
  color: #fff;
  z-index: 99;
}
.footer-left-price {
  width: calc(70% - 80px);
  line-height: 100rpx;
}
.footer-right {
  width: 30%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 5px;
  margin-right: 8px;
  color: #fff;
  font-size: large;
  text-align: center;
  background-color: #ee0a24;
  transition: .3s;
}
.footer-right:active {
  background-color: rgb(214, 22, 22);
}
/* 商品信息弹出层 */
.van-popup--bottom{
  z-index: 10000 !important;
}
.goods-item-info {
  position: relative;
  padding: 30px 20px;
}
.goods-item-info-img {
  height: 80px; 
  width: 80px; 
  border-radius: 5px;
}
.goods-item-info-name {
  position: absolute; 
  top: 30px; 
  left: 110px
}
.goods-item-info-footer {
  height: 40px;
  position: fixed; 
  display: flex;
  align-items: center;
  justify-content: space-between;
  background-color: #fff;
  padding: 10px 10px calc(10px + env(safe-area-inset-bottom)) 10px;
  bottom: 0;
  left: 0; 
  right: 0;
}
.goods-item-info-params-item {
  width: 65px; 
  height: 40px; 
  margin: 0 0 5px 0; 
  border-radius: 5px;
  border: 1px solid #ebedf0; 
  font-size: 15px; 
  text-align: center; 
  line-height: 40px;
}
.goods-item-info-footer-add {
  width: 120px; 
  height: 40px; 
  line-height: 40px; 
  text-align: center; 
  border-radius: 5px; 
  font-size: 18px;
  background-color: #ee0a24; 
  color: #fff; 
}
.active {
  color: #ee0a24;
  border: 1px solid #ee0a24 !important;
}
/* 购物车信息弹出层 */
.cart-info-top {
  height: 30px; 
  line-height: 30px; 
  font-size: 14px;
  padding: 0 15px; 
  display: flex; 
  justify-content: space-between; 
  background-color: #eeeeee; 
  color: #afb0b3; 
}
.cart-info-tables {
  display: flex;
  justify-content: space-evenly;
  height: 40px;
  line-height: 40px;
  border: 1px solid #EBEEF5;
  box-shadow: 0 2px 12px 0 rgb(0 0 0 / 10%);
  color: #303133;
  text-align: center;
  transition: .2s;
}
.cart-info-tables:active {
  color: #717172;
  box-shadow: 0 2px 12px 0 rgb(0 0 0 / 20%);
}
.cart-info-content {
  position: relative; 
  height: 60px; 
  padding: 20px 15px; 
  border-bottom: 1px solid #e6e6e6;
}
.cart-info-content-img {
  width: 60px;
  height: 100%; 
}
.cart-info-content-text {
  height: 70px; 
  font-size: 15px; 
  position: absolute; 
  left: 85px; 
  top: 15px; 
  display: flex; 
  flex-direction: column; 
  justify-content: space-between;
}
.cart-info-content-btn {
  position: absolute;
  right: 15px;
  bottom: 20px;
  font-size: 18px;
}
.table-select-container {
  height: 500px;
  overflow: auto;
}
.number-select {
  display: flex; 
  flex-wrap: wrap; 
  margin:10px 0 0 0;
}
.number-select-item {
  width: 60px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  border: 1px solid #afb0b3;
  border-radius: 4px;
  margin-left: 5px;
  margin-bottom: 10px;
}
.table-item {
  width: 90px;
  height: 90px;
  border: 1px solid #afb0b3;
  border-radius: 4px;
  margin: 0 0 10px 2px;
  text-align: center;
  box-sizing: border-box;
}
.table-item-top {
  padding: 5px 0;
  border-bottom: 1px solid #afb0b3;
}
.table-item-bottom {
  padding-top: 10px;
}
.is-occupy-top {
  background-color: #e5a01c;
  color: #fff;
}
.is-occupy {
  color:  #e5a01c;
  border: 1px solid #e5a01c !important;
}
.is-active-top {
  background-color: #35b95c;
  color: #fff;
}
.is-active {
  color: #35b95c;
  border: 1px solid #35b95c;
}